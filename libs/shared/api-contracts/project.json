{
  "name": "api-contracts",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/api-contracts/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/api-contracts",
        "main": "libs/shared/api-contracts/src/index.ts",
        "tsConfig": "libs/shared/api-contracts/tsconfig.lib.json",
        "assets": ["libs/shared/api-contracts/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/api-contracts/jest.config.cts"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "dependsOn": ["TableHall.Api:build"],
      "options": {
        "command": "npx -y openapi-typescript dist/openapi/tablehall-api.json -o libs/shared/api-contracts/src/generated/tablehall-api.ts"
      },
      "outputs": ["{projectRoot}/src/generated/tablehall-api.ts"]
    }
  }
}
